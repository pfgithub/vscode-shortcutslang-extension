{
	"name": "vscode-shortcutslang-extension",
	"displayName": "Shortcutslang",
	"description": "Shortcutslang syntax highlighting and autocompletion",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.31.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:flowcut"
	],
	"main": "./out/extension.js",
	"contributes": {
        "languages": [{
            "id": "flowcut",
            "aliases": ["Shortcutslang", "flowcut"],
            "extensions": [".flowcut",".shorttxt"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "flowcut",
            "scopeName": "source.shortcutslang",
            "path": "./syntaxes/flowcut.tmLanguage.json"
        }]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
