{
	"name": "vscode-shortcutslang-extension",
	"displayName": "ScPL Language",
	"description": "Shortcutslang syntax highlighting, and diagnostics",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.31.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:scpl"
	],
	"author": {
		"name": "pfg",
		"email": "omegariisthebest@gmail.com",
		"url": "https://pfgithub.github.io/"
	},
	"repository": "github:pfgithub/vscode-shortcutslang-extension",
	"publisher": "pfg",
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "scpl",
				"aliases": [
					"shortcutslang",
					"shorttxt"
				],
				"extensions": [
					".flowcut",
					".shorttxt",
					".scpl"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "scpl",
				"scopeName": "source.scpl",
				"path": "./syntaxes/flowcut.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"scpl": "^1.10.2"
	}
}
